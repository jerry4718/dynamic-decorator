{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "es2017"
    ],
    "pretty": true,
    "declaration": true,
    "paths": {}
  },
  "include": [
    "lib/**/*"
  ]
}
